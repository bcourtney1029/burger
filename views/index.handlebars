<div class="row justify-content-center">
    <div class="col-md-6">
        <h1>Eat-Da-Burger!</h1>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <img src="./assets/burger.png" alt="A Hamburger">
    </div>
    
</div>

<div class="row">

    <div class="col-md-4" id="uneaten">
        <h2>Burgers waiting to be devoured!</h2>
        <ul>
            {{#each burger}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=1}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-md-4">
        <h2>Add your own burger!</h2>
        <input id="newBurger" class="form-control" type="text" placeholder="Your burger's name goes here!">
        <div class="input-group-append">
            <button type="submit" id="addBurger" class="btn btn-primary">Add</button>
        </div>
    </div>

    <div class="col-md-4" id="eaten">
        <h2>Devoured Burgers!</h2>
        {{#each burger}}
            {{#if devoured}}
                {{> burgers/burger-block devoured=0}}
            {{/if}}
        {{/each}}
    </div>
</div>
<script src="/js/burger.js"></script>